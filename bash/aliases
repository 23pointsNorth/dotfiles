alias reload='source ~/.config/bash/aliases'
alias ea='vim ~/.config/bash/aliases && reload'

function ht() { 
  history | awk '{a[$2]++}END{for(i in a){print a[i] " " i}}' | sort -rn | head
}

# Pathing
alias ..='cd ..;'
alias ...='.. ..'

if [ $SYSTEM_NAME = 'Darwin' ]; then
  function manpdf() { man -t $@ | open -f -a Preview; }
  function osinfo() { 
     x1="$(/usr/bin/sw_vers -productName)"
     x2="$(/usr/bin/sw_vers -productVersion)"
     x3="$(/usr/bin/sw_vers -buildVersion)"
     x4="$(/usr/bin/arch)"
     echo "${x1} - ${x2} - ${x3} - ${x4}"
  }
  alias ls='ls -G'
  alias pubkey='pubkey | pbcopy && echo "Keys copied to clipboard"'
  alias et="m"
  alias o='open .'
  alias b='open -a chrome'
  alias eprof="mate ~/.config"
  alias hidefile='/usr/bin/SetFile -a "V"'
  alias showfile='/usr/bin/SetFile -a "v"'

  alias selen='/usr/bin/java -jar /Applications/Sauce\ RC.app/Contents/Resources/controller/selenium-server.jar -timeout 30 -port 5666'

  alias ssh.logs='ssh sf7.sfo.coceve.local'
  alias ssh.kiwi='ssh kiwi.coceve.com'
  alias kiwi='ssh.kiwi'
  alias kiwi.tun22='kiwi -f -R 5722:localhost:22 -N'
  alias kiwi.tun56='kiwi -f -R 5756:localhost:4444 -N'
  alias kiwi.umount='cd ~;umount /Volumes/kiwi && rm -rf /kiwi'
  alias kiwi.mount='mkdir -p /Volumes/kiwi && sshfs kris@kiwi.coceve.com:/home/kris/pbwiki /Volumes/kiwi -o auto_cache,reconnect,follow_symlinks,local,allow_other,volname=PBwiki && ln -s /Volumes/kiwi /kiwi && prompt.vcs.disable && cd /kiwi'
#  alias startpg='sudo /Library/StartupItems/PostgreSQL/PostgreSQL start'
#  alias readrails="mate `ruby -rubygems -e "puts( ['rails', 'activerecord', 'activeresource', 'actionpack', 'activesupport'].collect { |gem| gems = Gem.source_index.find_name(gem); gems.last.full_gem_path; }.join(' '))"`"

  # MongoDB
  function mongo-start() {
    launchctl load -w ~/Library/LaunchAgents/org.mongodb.mongod.plist
    launchctl start org.mongodb.mongod
  }
  function mongo-stop() {
    launchctl stop org.mongodb.mongod
    launchctl unload -w ~/Library/LaunchAgents/org.mongodb.mongod.plist
  }
else
  alias ls='ls --color=auto'
fi

function fromunixtime { 
	perl -e "require 'ctime.pl'; print &ctime($1);" 
}

# ssh
alias list-ssh='ps ax | grep "ssh" | grep -v grep'
alias list-t='ps ax | grep "ssh.*[0-9]:.*:[0-9]"'

# key bindings
alias keybinds='bind -P | grep not -v | cut -d" " -f1,6,7,8,9,10,11 | sed "s/[\"\\,.]//g" | column -t' # print all keybinds in terminal

# process status
alias tu='top -o cpu'
alias tm='top -o vsize'

# ls aliases
#alias ls='ls $LS_OPTIONS'
alias l='ls $LS_OPTIONS -lh'
alias la='ls $LS_OPTIONS -lAh'
alias ld='ls $LS_OPTIONS -lad */'

#tail
alias t='tail'
alias tf='tail -F'

# Ruby
alias irb='irb --readline -r irb/completion'
alias rii='ri -Tf ansi'

#imagemagick

alias imginfo="identify -format '-- %f -- \nType: %m\nSize: %b bytes\nResolution: %wpx x %hpx\nColors: %k'"
alias imgres="identify -format '%wx%h\n'"
