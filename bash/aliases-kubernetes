alias k.g.svc.an.yaml='k.g service -o=yaml --all-namespaces'
alias k.g.svc.n.yaml='k.g service -o=yaml --namespace'

alias k.rm.all='k.rm --all'
alias k.rm.cm='k.rm configmap'
alias k.rm.cm.all='k.rm configmap --all'
alias k.rm.cm.n='k.rm configmap --namespace'
alias k.rm.dep='k.rm deployment'
alias k.rm.dep.all='k.rm deployment --all'
