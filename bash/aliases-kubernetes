alias k.d.ns.an='k.d namespaces --all-namespaces'
alias k.d.po='k.d pods'
alias k.d.po.an='k.d pods --all-namespaces'
alias k.d.po.n='k.d pods --namespace'
alias k.d.sec='k.d secret'
alias k.d.sec.an='k.d secret --all-namespaces'
alias k.d.sec.n='k.d secret --namespace'
alias k.d.svc='k.d service'
alias k.d.svc.an='k.d service --all-namespaces'
alias k.d.svc.n='k.d service --namespace'

# get configmap
alias k.g.cm.json='k.g configmap -o=json'
