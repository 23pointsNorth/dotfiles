# get service
alias k.g.svc='k.g service'
alias k.g.svc.json='k.g service -o=json'
alias k.g.svc.wide='k.g service -o=wide'
alias k.g.svc.an='k.g service --all-namespaces'
alias k.g.svc.an.json='k.g service --all-namespaces -o=json'
alias k.g.svc.an.wide='k.g service --all-namespaces -o=wide'
