alias k.rm.svc.n='kubectl delete service --namespace'

# namespace=kube-system
alias k.sys='kubectl --namespace=kube-system'
alias k.sys.x='kubectl --namespace=kube-system exec -i -t'
alias k.sys.a='kubectl --namespace=kube-system apply --recursive -f'
alias k.sys.d='kubectl --namespace=kube-system describe'
alias k.sys.logs='kubectl --namespace=kube-system logs -f'
alias k.sys.rm='kubectl --namespace=kube-system delete'
alias k.sys.run='kubectl --namespace=kube-system run --rm --restart=Never --image-pull-policy=IfNotPresent -i -t'
alias k.sys.g='kubectl --namespace=kube-system get'

alias k.sys.g.json='kubectl --namespace=kube-system get -o=json'
alias k.sys.g.wide='kubectl --namespace=kube-system get -o=wide'
