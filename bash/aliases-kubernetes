alias k.g.cm.an.json='k.g configmap -o=json --all-namespaces'
alias k.g.cm.n.json='k.g configmap -o=json --namespace'
alias k.g.cm.an.wide='k.g configmap -o=wide --all-namespaces'
alias k.g.cm.n.wide='k.g configmap -o=wide --namespace'
alias k.g.cm.wide='k.g configmap -o=wide'
alias k.g.cm.yaml='k.g configmap -o=yaml'
alias k.g.cm.an.yaml='k.g configmap -o=yaml --all-namespaces'
alias k.g.cm.n.yaml='k.g configmap -o=yaml --namespace'

# get deployment
alias k.g.dep='k.g deployment'
