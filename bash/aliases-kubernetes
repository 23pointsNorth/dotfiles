alias k.d.cm.an='k.d.cm --all-namespaces'
alias k.d.cm.n='k.d.cm --namespace'
alias k.d.dep='k.d deployment'
alias k.d.dep.an='k.d.dep --all-namespaces'
alias k.d.dep.n='k.d.dep --namespace'
alias k.d.f='k.d --recursive -f'
