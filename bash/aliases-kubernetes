alias k.rm.ing='k.rm ingress'
alias k.rm.ing.all='k.rm ingress --all'
alias k.rm.ing.n='k.rm ingress --namespace'
alias k.rm.n='k.rm --namespace'
alias k.rm.ns='k.rm namespaces'
