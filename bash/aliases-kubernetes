alias k.rm.ns='kubectl delete namespaces'
alias k.rm.ns.all='kubectl delete namespaces --all'
alias k.rm.p='kubectl delete pods'
alias k.rm.p.all='kubectl delete pods --all'
alias k.rm.p.n='kubectl delete pods --namespace'
alias k.rm.sec='kubectl delete secret'
