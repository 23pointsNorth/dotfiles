alias k.g.dep.n.json='k.g deployment -o=json --namespace'
alias k.g.dep.wide='k.g deployment -o=wide'
alias k.g.dep.an.wide='k.g deployment -o=wide --all-namespaces'
alias k.g.dep.n.wide='k.g deployment -o=wide --namespace'
alias k.g.dep.yaml='k.g deployment -o=yaml'
alias k.g.dep.an.yaml='k.g deployment -o=yaml --all-namespaces'
