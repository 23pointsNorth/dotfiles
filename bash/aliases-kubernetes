alias k.g.rf.json='k.g.rf -o=json'
alias k.g.rf.wide='k.g.rf -o=wide'
alias k.g.rf.yaml='k.g.rf -o=yaml'

# describe
alias k.d='kubectl describe'
alias k.d.n='k.d --namespace'
alias k.d.an='k.d --all-namespaces'
