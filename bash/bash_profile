export NICE_HOSTNAME=`hostname -f`
export SHORT_HOST=`hostname -s`

test -s ~/.bash_local && . $_
test -f ~/.config/bash/exports && . $_
test -f ~/.config/bash/colors && . $_
test -f ~/.config/git/gitrc && . $_
test -f ~/.config/bash/aliases && . $_
test -f ~/.config/bash/prompt && . $_
test -f ~/.config/bash/save-directory && . $_
test -f ~/.git-completion.bash && . $_
test -s /etc/bash_completion && . $_

# readline settings
bind "set completion-ignore-case on"
bind "set bell-style none" # No bell, because it's damn annoying
bind "set show-all-if-ambiguous On" # this allows you to automatically show completion without double tab-ing

shopt -s checkwinsize
shopt -s histappend # make bash append to ~/.bash_history file
shopt -s globstar 2>/dev/null # Bash 4 and above only

# RVM - Ruby Version Manager
test -s ~/.rvm/scripts/rvm && . $_
test -r $rvm_path/scripts/completion && . $_

if [ $SYSTEM_NAME = 'Linux' ]; then
  # NVM - Node Version Manager
  test -s ~/.nvm/nvm.sh && . $_
fi

if [ $SYSTEM_NAME = 'Darwin' ]; then
  test -s ~/.config/bash/terminal && . $_
  # set Docker environment variables using docker-machine
  test -f /usr/local/bin/docker-machine && eval $($_ env default)
  # brew install nvm (0.22.2)
  test -s $(brew --prefix nvm)/nvm.sh && . $_
  # brew install bash-completion
  test -s $(brew --prefix)/etc/bash_completion && . $_
fi

export PATH="~/.rvm/bin:$PATH" # Add RVM to PATH for scripting

complete -C ~/.config/ruby/rake-completion.rb -o default rake

INIT_AUTOJUMP=~/.config/bash/autojump/autojump.bash
test -s ${INIT_AUTOJUMP} && . $_

test -f ~/.bashrc && . $_
